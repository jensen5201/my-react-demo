{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "typeRoots": [
        "node_modules/@types"
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "mock"]
}
